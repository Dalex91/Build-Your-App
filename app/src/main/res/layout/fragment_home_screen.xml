<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.build_your_app.core.fragments.home.HomeScreenViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/laboratory_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_26dp"
                android:backgroundTint="@color/scarpa_flow"
                app:cardCornerRadius="@dimen/margin_26dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_12dp"
                        android:src="@drawable/ic_laboratory"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="@string/laboratory_work"
                        android:textColor="@color/green_android"
                        android:textSize="@dimen/text_size26sp"
                        app:layout_constraintBottom_toBottomOf="@id/icon_iv"
                        app:layout_constraintStart_toEndOf="@id/icon_iv"
                        app:layout_constraintTop_toTopOf="@id/icon_iv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/weight_guesser_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_26dp"
                android:backgroundTint="@color/scarpa_flow"
                app:cardCornerRadius="@dimen/margin_26dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_weight_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_12dp"
                        android:src="@drawable/ic_weight_guesser"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="@string/weight_guesser"
                        android:textColor="@color/green_android"
                        android:textSize="@dimen/text_size26sp"
                        app:layout_constraintBottom_toBottomOf="@id/icon_weight_iv"
                        app:layout_constraintStart_toEndOf="@id/icon_weight_iv"
                        app:layout_constraintTop_toTopOf="@id/icon_weight_iv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/battery_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_26dp"
                android:backgroundTint="@color/scarpa_flow"
                app:cardCornerRadius="@dimen/margin_26dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_battery_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_12dp"
                        android:src="@drawable/ic_battery"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="@string/battery_measurement"
                        android:textColor="@color/green_android"
                        android:textSize="@dimen/text_size26sp"
                        app:layout_constraintBottom_toBottomOf="@id/icon_battery_iv"
                        app:layout_constraintStart_toEndOf="@id/icon_battery_iv"
                        app:layout_constraintTop_toTopOf="@id/icon_battery_iv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/light_checker_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_26dp"
                android:backgroundTint="@color/scarpa_flow"
                app:cardCornerRadius="@dimen/margin_26dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_sun_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_12dp"
                        android:src="@drawable/ic_light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="@string/light_detector"
                        android:textColor="@color/green_android"
                        android:textSize="@dimen/text_size26sp"
                        app:layout_constraintBottom_toBottomOf="@id/icon_sun_iv"
                        app:layout_constraintStart_toEndOf="@id/icon_sun_iv"
                        app:layout_constraintTop_toTopOf="@id/icon_sun_iv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>