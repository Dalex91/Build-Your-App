<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/shark">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_26dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_sun_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_moon_regular" />

        <TextView
            android:id="@+id/title_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:textSize="@dimen/margin_26dp"
            app:layout_constraintEnd_toEndOf="@id/icon_sun_iv"
            app:layout_constraintStart_toStartOf="@id/icon_sun_iv"
            app:layout_constraintTop_toBottomOf="@id/icon_sun_iv"
            tools:text="@string/dark_outside"
            tools:textColor="@color/moon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>